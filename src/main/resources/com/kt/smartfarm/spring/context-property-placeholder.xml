<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- EncryptablePropertyPlaceholderConfigurer 로 대체하여 불용처리함
	<context:property-placeholder location="classpath:application.properties,file:/myapp/application.properties,file:/home/gsm/v4/conf/smartfarm-mgr-env.properties"
					 ignore-resource-not-found="true"
					 ignore-unresolvable="true"
					 system-properties-mode="OVERRIDE" />-->

	<bean id="encryptorConfig" class="org.jasypt.encryption.pbe.config.EnvironmentPBEConfig">
		<property name="algorithm" value="PBEWithMD5AndDES" />
		<property name="password" value="SMARTFARM-PASS" />
	</bean>

	<bean id="encryptor" class="org.jasypt.encryption.pbe.StandardPBEStringEncryptor">
		<property name="config" ref="encryptorConfig" />
	</bean>

	<bean id="propertyConfigurer" class="org.jasypt.spring31.properties.EncryptablePropertyPlaceholderConfigurer">
		<constructor-arg ref="encryptor" />
		<property name="ignoreUnresolvablePlaceholders" value="true"/>
		<property name="ignoreResourceNotFound" value="true"/>
		<property name="systemPropertiesMode" value="2"/><!--NEVER:0, FALLBACK:1, OVERRIDE:2 -->
		<property name="locations" >
			<list>
				<value>classpath:application.properties</value>
				<value>file:/myapp/application.properties</value>
				<value>file:/home/gsm/v4/conf/smartfarm-mgr-env.properties</value>
			</list>
		</property>
	</bean>

</beans>

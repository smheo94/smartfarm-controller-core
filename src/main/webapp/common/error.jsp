<%@ page contentType="application/json" pageEncoding="UTF-8" isErrorPage="true" %><%
    int status = response.getStatus();
    String addMessage = " 관리자에게 문의해 주세요";
    String message = "오류가 발생했습니다.";
    if ( exception != null && exception.getMessage() != null ) {
        message = exception.getMessage();
    } else {
       if ( status == 400 )
           message = "잘못된 요청입니다." + addMessage;
       else if ( status == 403 )
           message = "요청이 실패했습니다." + addMessage;
       else if ( status == 404 )
           message = "찾을 수 없습니다. + addMessage";
    }
    out.println(String.format("{'reason':'%s'}", status, message));
    //request.getAttribute("javax.servlet.error.status_code")
    //request.getAttribute("javax.servlet.error.message")
%>